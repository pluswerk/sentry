{
  "name": "pluswerk/sentry",
  "type": "typo3-cms-extension",
  "description": "+Pluswerk TYPO3 extension: Sentry Client",
  "homepage": "https://www.pluswerk.ag/",
  "support": {
    "source": "https://github.com/pluswerk/sentry",
    "issues": "https://github.com/pluswerk/sentry/issues",
    "docs": "https://github.com/pluswerk/sentry/blob/master/README.md"
  },
  "license": "GPL-2.0-or-later",
  "extra": {
    "grumphp": {
      "config-default-path": "grumphp.yml"
    },
    "pluswerk/grumphp-config": {
      "auto-setting": false
    },
    "typo3/cms": {
      "extension-key": "sentry"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true,
      "phpro/grumphp": true,
      "pluswerk/grumphp-config": true,
      "phpstan/extension-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Pluswerk\\Sentry\\": "Classes/"
    }
  },
  "require": {
    "php": "~7.4 || ~8.0 || ~8.1",
    "ext-fileinfo": "*",
    "composer-runtime-api": "^2",
    "http-interop/http-factory-guzzle": "^1.0",
    "sentry/sentry": "^3.0",
    "typo3/cms-core": "^10.4 || ^11.5"
  },
  "require-dev": {
    "phpstan/extension-installer": "^1.2",
    "pluswerk/grumphp-config": "^5.0",
    "saschaegerer/phpstan-typo3": "^1.8",
    "symfony/http-client": "^5.4"
  }
}
